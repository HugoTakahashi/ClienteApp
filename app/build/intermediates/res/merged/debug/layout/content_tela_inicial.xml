<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app2="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context=".activity.SelecionarServicoActivity"
    android:orientation="vertical"
    android:weightSum="1"
    android:background="@drawable/fundo_claro"
    >


    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="124dp"
        android:layout_weight="0.10"
        android:layout_marginTop="100dp">

        <ImageButton
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:id="@+id/bt_solicitar"
            android:background="@color/colorAccent"
            android:src="@drawable/solicitar_servico"
            android:adjustViewBounds="false"
            android:alpha="0.83" />
    </LinearLayout>

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

    </LinearLayout>

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="137dp">

        <ImageButton
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:id="@+id/bt_agendadas"
            android:layout_weight="1"
            android:background="@color/colorAccent"
            android:elevation="0dp"
            android:layout_marginTop="1dp"
            android:layout_marginRight="1dp"
            android:src="@drawable/diarias_agendadas"
            android:alpha="0.83" />

        <ImageButton
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:id="@+id/bt_orcamento"
            android:background="@color/colorAccent"
            android:layout_marginTop="1dp"
            android:layout_marginLeft="1dp"
            android:src="@drawable/historico"
            android:alpha="0.83"
            android:layout_weight="2" />
    </LinearLayout>

</LinearLayout>
